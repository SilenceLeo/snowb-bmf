{
  "name": "snowb-bmf",
  "version": "1.1.0",
  "private": true,
  "homepage": "https://snowb.org/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "format": "prettier --write src/**/*.{ts,js,tsx,css} types/**/*.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "pb": "node scripts/createProtucol.js",
    "predeploy": "sentry-cli login && node scripts/build.js",
    "deploy": "gh-pages -d build",
    "postdeploy": "node scripts/sentry.js"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@sentry/react": "^7.53.1",
    "ajv": "^8.6.3",
    "clsx": "^1.1.1",
    "color": "^3.1.3",
    "file-saver": "^2.0.5",
    "hotkeys-js": "^3.8.1",
    "jszip": "^3.8.0",
    "mobx": "^5.15.7",
    "mobx-react": "^6.3.1",
    "mobx-utils": "^5.6.1",
    "notistack": "^1.0.10",
    "opentype.js": "^1.3.4",
    "protobufjs": "^7.2.4",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "rectangle-packer": "^0.0.8",
    "requestidlecallback": "^0.3.0",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3"
  },
  "devDependencies": {
    "@sentry/cli": "^1.68.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/color": "^3.0.1",
    "@types/file-saver": "^2.0.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/opentype.js": "^1.3.3",
    "@types/react": "^16.9.53",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.8",
    "@types/requestidlecallback": "^0.3.1",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "worker-loader": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,scss}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
